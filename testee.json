{
    "reporter": "spec",
    "delay": 2000,
    "browsers": [
        {
            "browser": "chrome",
            "args": [
                "--headless",
                "--disable-gpu",
                "--disable-extensions",
								"--no-sandbox",
                "--remote-debugging-port=9222"
            ]
        },
        {
            "browser": "firefox",
            "args": [
                "--headless"
            ]
        }
    ],
	"coverage": {
		"dir": "coverage",
		"ignore": ["node_modules"]
	}
}
